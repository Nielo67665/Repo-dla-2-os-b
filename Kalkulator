#include <stdio.h>
int main()
{
    double a,b,x;
    char znak;

    printf("Podaj pierwsze wyrazenie: ");
    scanf("%lf", &a);
    printf("\nPodaj drugie wyrazenie: ");
    scanf("%lf", &b);
    printf("\nJakiego rodzaju operacje chcesz wykonac? (Podaj znak): ");
    getchar ();
    scanf("%c",&znak);

switch(znak)
{
        case '+': x=a+b;
                printf("\nWynik dzialania to: %lf\n",x);
                break;
        case '-': x=a-b;
                printf("\nWynik dzialania to: %lf\n",x);
                break;
        case '*': x=a*b;
                printf("\nWynik dzialania to: %lf\n",x);
                break;
        case '/': x=a/b;
                printf("\nWynik dzialania to: %lf\n",x);
                break;
}

    return 0;
}
