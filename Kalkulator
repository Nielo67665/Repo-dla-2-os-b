#include <stdio.h>

int main()
{
    int a,b,x;
    char znak;

    printf("Podaj pierwsze wyrazenie: ");
    scanf("%i", &a);
    printf("\nPodaj drugie wyrazenie: ");
    scanf("%i", &b);
    printf("\nJakiego rodzaju operacje chcesz wykonac? (Podaj znak): ");
    getchar ();
    scanf("%c",&znak);

switch(znak)
{
        case '+': x=a+b;
                printf("\nWynik dzialania to: %d\n",x);
                break;
        case '-': x=a-b;
                printf("\nWynik dzialania to: %d\n",x);
                break;
        case '*': x=a*b;
                printf("\nWynik dzialania to: %d\n",x);
                break;


}

    return 0;
}

